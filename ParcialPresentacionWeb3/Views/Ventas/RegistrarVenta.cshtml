<div class="container">
    <h2>Registrar Venta</h2>
    <form asp-controller="Ventas" asp-action="RegistrarVentas" method="post">
        <div class="form-group">
            <label for="cliente">Cliente:</label>
            <input type="text" class="form-control" id="cliente" name="cliente" maxlength="50" required>
        </div>
        <div class="form-group">
            <label for="cantidad">Cantidad vendida:</label>
            <input type="number" class="form-control" id="cantidadVendida" name="cantidadVendida" required min="2" max="250">
        </div>
        <div class="form-group">
            <label for="precio">Precio Unitario:</label>
            <input type="number" step="0.01" class="form-control" id="precioUnitario" name="precioUnitario" required min="10" max="999" >
        </div>
        <button type="submit" class="btn btn-primary">Registrar Venta</button>
    </form>
</div>

<h2>El total es: @ViewBag.Resultado</h2>

@if(ViewBag.MensajeError!= null){
    <p>@ViewBag.MensajeError</p>
}